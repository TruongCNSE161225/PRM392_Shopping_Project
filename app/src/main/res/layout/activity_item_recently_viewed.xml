<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewRecentlyViewedLayout"
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="238dp">

        <ImageView
            android:id="@+id/imageViewRecentlyViewed"
            android:layout_width="146dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textViewRecentlyViewedName"
            android:layout_width="119dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Tên sản phẩm"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewRecentlyViewed" />

        <TextView
            android:id="@+id/textViewRecentlyViewedPrice"
            android:layout_width="32dp"
            android:layout_height="21dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Giá"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecentlyViewedName" />

        <TextView
            android:id="@+id/textViewRecentlyViewedUnit"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="ĐV"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textViewRecentlyViewedPrice"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecentlyViewedName" />

        <TextView
            android:id="@+id/textViewRecentlyViewedDiscount"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="CK"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textViewRecentlyViewed1"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecentlyViewedPrice" />

        <TextView
            android:id="@+id/textViewRecentlyViewed1"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginTop="15dp"
            android:text="$/"
            app:layout_constraintStart_toEndOf="@+id/textViewRecentlyViewedPrice"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecentlyViewedName" />

        <TextView
            android:id="@+id/textViewRecentlyViewed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="Chiết khấu:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecentlyViewedPrice" />

        <TextView
            android:id="@+id/textViewRecentlyViewed3"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_marginTop="10dp"
            android:text="%"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textViewRecentlyViewedDiscount"
            app:layout_constraintTop_toBottomOf="@+id/textViewRecentlyViewedPrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>