<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".ViewDetailProductActivity">

    <ImageView
        android:id="@+id/imageViewDetailProduct"
        android:layout_width="260dp"
        android:layout_height="256dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewDetailProductName"
        android:layout_width="224dp"
        android:layout_height="71dp"
        android:layout_marginTop="30dp"
        android:text="Tên sản phẩm"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetailProduct" />

    <TextView
        android:id="@+id/textViewDetailProductDescription"
        android:layout_width="311dp"
        android:layout_height="87dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Nội dung sản phẩm"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductName" />

    <TextView
        android:id="@+id/textViewDetailProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="Giá"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductDescription" />

    <TextView
        android:id="@+id/textViewDetailProductUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="Đơn vị"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textViewDetailProductPrice"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductDescription" />

    <Button
        android:id="@+id/buttonDetailProductUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#8BC34A"
        android:onClick="onUpdateProduct"
        android:text="Cập nhật"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDetailProductDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#8BC34A"
        android:onClick="onDeleteProduct"
        android:text="Xoá"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDetailProductUpdate" />

    <TextView
        android:id="@+id/textViewDetailProduct1"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textViewDetailProductPrice"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductDescription" />

    <TextView
        android:id="@+id/textViewDetailProduct2"
        android:layout_width="119dp"
        android:layout_height="37dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="Số lượng: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductPrice" />

    <TextView
        android:id="@+id/textViewDetailProductQuantity"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:text="Số lượng"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textViewDetailProduct2"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetailProductUnit" />

</androidx.constraintlayout.widget.ConstraintLayout>