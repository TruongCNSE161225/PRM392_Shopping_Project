<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UDProductActivity">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="260dp"
        android:layout_height="256dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nameProduct"
        android:layout_width="224dp"
        android:layout_height="71dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar" />

    <TextView
        android:id="@+id/tv_descriptionPro"
        android:layout_width="311dp"
        android:layout_height="87dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameProduct" />

    <TextView
        android:id="@+id/tv_pricePro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_descriptionPro" />

    <TextView
        android:id="@+id/tv_unitPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tv_pricePro"
        app:layout_constraintTop_toBottomOf="@+id/tv_descriptionPro" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="30dp"
        android:onClick="onUpdateProduct"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="30dp"
        android:onClick="onDeleteProduct"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_update" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tv_pricePro"
        app:layout_constraintTop_toBottomOf="@+id/tv_descriptionPro" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="119dp"
        android:layout_height="37dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="Số lượng: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pricePro" />

    <TextView
        android:id="@+id/tv_quantityPro"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/tv_unitPro" />

</androidx.constraintlayout.widget.ConstraintLayout>