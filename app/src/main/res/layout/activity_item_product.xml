<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewProductLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="#FF9800">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:layout_marginStart="204dp"
            android:layout_marginTop="4dp"
            android:text="Tên SP"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="132dp"
            android:layout_height="138dp"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewProductName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textViewProductDescription"
            android:layout_width="206dp"
            android:layout_height="34dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="9dp"
            android:text="Nội dung"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageViewProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductName" />

        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="Giá"
            app:layout_constraintStart_toEndOf="@+id/imageViewProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductDescription" />

        <TextView
            android:id="@+id/textViewProductUnit"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:text="Đơn vị"
            app:layout_constraintStart_toEndOf="@+id/textViewProductPrice"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductDescription" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:text="/"
            app:layout_constraintEnd_toStartOf="@+id/textViewProductUnit"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textViewProductPrice"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductDescription" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:text="số lượng: "
            app:layout_constraintStart_toEndOf="@+id/textViewProductUnit"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductDescription" />

        <TextView
            android:id="@+id/textViewProductQuantity"
            android:layout_width="44dp"
            android:layout_height="19dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="4dp"
            android:text="SL"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductDescription" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:text="Chiết khấu:"
            app:layout_constraintStart_toEndOf="@+id/imageViewProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductPrice" />

        <TextView
            android:id="@+id/textViewProductDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:text="Chiết khấu"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductUnit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>